---
import '@/styles/global.css';
import '@/styles/starwind.css';
import Sidebar from '@/components/custom-ui/Sidebar.astro';
import { navigation } from '@/components/data';
import type { User } from '@prisma/client';
import { AlertCustom } from '@/components/custom-ui/alert';

const user = Astro.locals.user;
const alert = Astro.locals.alert;

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
    	<title>{title}</title>
	</head>
	<body class="bg-gray-900 text-white">
		<div class="flex h-screen">
			<Sidebar title='AIRIA' user={user as User} currentPath={Astro.url.pathname} navigation={navigation} />
	    	<main class="flex-1 overflow-y-auto bg-gray-50">
				{alert && (
					<AlertCustom title={alert.title} description={alert.description} type={alert.type} dismissible={alert.dismissible} />
				)}
				<slot />
			</main>
		</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
